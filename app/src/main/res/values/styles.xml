<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="placeholder_text_font"></style>
    <style name="placeholder_text" parent="placeholder_text_font">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/space_small_8</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/space_medial_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_marginLeft">@dimen/space_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_marginRight">@dimen/space_medium_32</item>
    </style>

    <style name="layout_data">
        <item name="android:layout_width">0dp</item>
        <item name="android:minHeight">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/space_medium_32</item>
        <item name="android:layout_marginRight">@dimen/space_normal_16</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_marginLeft">@dimen/space_larger_72</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="text_data">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="header">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">@dimen/space_small_8</item>
    </style>

    <style name="header.data" parent="header">
        <item name="android:textSize">@dimen/font_size_h3_24</item>
    </style>

    <style name="header.hint" parent="header">
        <item name="android:textSize">@dimen/font_size_h4_16</item>
    </style>
    
    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
